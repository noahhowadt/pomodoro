---
import Background from "../components/Background";
import Timer from "../components/Timer";
import Layout from "../layouts/Layout.astro";
import getImage from "../utils/getImage";

const photo = await getImage();
---

<Layout title="Pomodoro">
  <Background client:only photo={photo} />
  <div
    class="absolute right-4 bottom-4 text-white z-50"
    style="text-shadow: 1px 1px 6px rgba(0,0,0,0.6)"
  >
    Photo by <a
      href={`https://unsplash.com/@${photo.user.username}`}
      target="_blank"
      rel="noopener noreferrer"
      class="underline">{photo.user.name}</a
    > on <a
      href="https://unsplash.com"
      rel="noopener noreferrer"
      target="_blank"
      class="underline">Unsplash</a
    >
  </div>
  <Timer client:load />
</Layout>
